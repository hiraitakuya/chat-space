.mainchat
  .main_chat__group_info
    .main_chat__group_info__left_box
      .main_chat__group_info__left_box__chat_tittle
        = @group.name
      %ul.main_chat__group_info__left_box__member_list
        Member :&nbsp;
        %li.main_chat__group_info__left_box__member_list__chat_member
          = current_user.name
    .main_chat__group_info__right_box
      = link_to "Edit", edit_group_path(@group), class: "main_chat__group_info__right_box--edit_btn"

  .main_chat__message_list
    = render @messages

  .main_chat__message_form
    = form_with model: [@group, @message], html: {class: "main_chat__message_form__form_box"}, local: true do |f|
      .main_chat__message_form__form_box__form_contents
        = f.text_field :content, class: 'main_chat__message_form__form_box__form_contents__input_text', placeholder: 'type a message'
        = f.label :image, class: 'main_chat__message_form__form_box__form_contents__input_image' do
          = icon('far', 'image', class: "main_chat__message_form__form_box__form_contents__input_image--img_icon", ) 
          = f.file_field :image, class: 'main_chat__message_form__form_box__form_contents__input_image--hidden_file'
      = f.submit 'Send', class: 'main_chat__message_form__form_box--send_btn'
