.main_chat__message_list__message_box{data: {message: {id: message.id}}}
  .main_chat__message_list__message_box__top_box
    .main_chat__message_list__message_box__top_box__member_name
      = message.user.name
    .main_chat__message_list__message_box__top_box__date_info
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message_list__message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?